{
  "rta_logger":
  {
    "default_manager": "develop",
    "log_managers":
    [
      {
        "manager_name": "develop",
        "enable": true,
        "app_name": "TestApp",
        "severity_level": "debug",
        "buffer_size": 100,
        "flush_wait_seconds": 15,
        "repositories":
        [
          {
            "enable": true,
            "type": "console",
            "formatter":
            {
              "type": "text",
              "delimiter": "|"
            }
          },
          {
            "enable": true,
            "type": "file",
            "file_path": "log.txt",
            "roll_period": "daily",
            "roll_size": "1048576",
            "formatter":
            {
              "type": "text",
              "delimiter": "|"
            }
          },
          {
            "enable": true,
            "type": "fluentd",
            "host": "localhost",
            "port": "8888",
            "formatter":
            {
              "type": "json"
            }
          }
        ],
        "topics":
        [
          {
            "title": "test",
            "enable": true,
            "severity_level": "WARN"
          }
        ]
      }
    ]
  }
}